<section class="rhymeScene {{class}}">
	<h1 class="rhymeScene__title jeu__title">Choisis une <b>rime</b></h1>

	<div class="rhymeScene__container">
		<div class="rhymeScene__rhymeContainer">
			<h2 class="rhymeScene__rhymeTitle">Rimes Plates</h2>
			<h3 class="rhymeScene__rhymeSubtitle">Par exemple:</h3>
			<p class="rhymeScene__rhyme1">Une belle<span class="rhymeScene__rhymeA"> orchidée</span></p>
			<p class="rhymeScene__rhyme2">pour ma<span class="rhymeScene__rhymeA"> bien-aimée</span></p>
			<p class="rhymeScene__rhyme3">preuve de ma<span class="rhymeScene__rhymeB"> bravoure</span></p>
			<p class="rhymeScene__rhyme4">et de mon<span class="rhymeScene__rhymeB"> amour</span></p>
		</div>
		<div class="rhymeScene__rhymeList">
			<div class="rhymeScene__rhymeItem secondaryButton secondaryButton--selected" data-ref="AABB">AABB</div>
			<div class="rhymeScene__rhymeItem secondaryButton" data-ref="ABAB">ABAB</div>
			<div class="rhymeScene__rhymeItem secondaryButton" data-ref="ABBA">ABBA</div>
		</div>
	</div>
</section>
